// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id
  firstName String
  lastName  String
  email     String
  password  String
  imageSrc  String    @default("imageUrl")
  imageAlt  String    @default("imageAlt")
  weight    Int
  height    Int
  gender    String
  age       Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt @default(now())
  userLogs  UserLog[]
}

model Workout {
  id           Int           @id @default(autoincrement())
  name         String
  imageSrc     String
  imageAlt     String
  href         String        @default("/workout")
  workoutLines WorkoutLine[]
}

model Exercise {
  id           Int           @id @default(autoincrement())
  name         String
  description  String
  imageSrc     String 
  imageAlt     String 
  videoUrl     String 
  href         String        @default("/exercise")
  workoutLines WorkoutLine[]
}

model WorkoutLine {
  id               Int       @id @default(autoincrement())
  recSets          Int
  recReps          Int
  recWeights       Int
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  workoutId        Int
  workoutRelation  Workout   @relation(fields: [workoutId], references: [id])
  exerciseId       Int
  exerciseRelation Exercise  @relation(fields: [exerciseId], references: [id])
  userLogs         UserLog[]
}

model UserLog {
  id                  Int         @id @default(autoincrement())
  reps                Int
  step                Int
  weights             Int
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  userId              String
  userRelation        User        @relation(fields: [userId], references: [id])
  workoutLineId       Int
  workoutLineRelation WorkoutLine @relation(fields: [workoutLineId], references: [id])
}
