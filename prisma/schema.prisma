// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String 
  email     String
  password  String
  imageUrl  String
  weight    Int
  height    Int
  gender    String
  age       Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userLogs  UserLog[]
}

model Workout {
  id           Int           @id @default(autoincrement())
  name         String
  workoutLines WorkoutLine[]
}

model Exercise {
  id           Int           @id @default(autoincrement())
  name         String
  description  String
  imageUrl     String
  videoUrl     String?
  workoutLines WorkoutLine[]
}

model WorkoutLine {
  id               Int       @id @default(autoincrement())
  recSets          Int
  recReps          Int
  recWeights       Int
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  workoutId        Int
  workoutRelation  Workout   @relation(fields: [workoutId], references: [id])
  exerciseId       Int
  exerciseRelation Exercise  @relation(fields: [exerciseId], references: [id])
  userLogs         UserLog[]
}

model UserLog {
  id                  Int         @id @default(autoincrement())
  reps                Int
  step                Int
  weights             Int
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  userId              Int
  userRelation                User        @relation(fields: [userId], references: [id])
  workoutLineId       Int
  workoutLineRelation WorkoutLine @relation(fields: [workoutLineId], references: [id])
}
